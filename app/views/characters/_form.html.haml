= form_for @character do |f|
  -if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :strength
    = f.text_field :strength
  .field
    = f.label :toughness
    = f.text_field :toughness
  .field
    = f.label :hitpoints
    = f.text_field :hitpoints
  .actions
    = f.submit 'Save'
