= form_for @fight do |f|
  -if @fight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fight.errors.count, "error")} prohibited this fight from being saved:"
      %ul
        - @fight.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :player
    = f.select :player_id, Character.all.collect { |c| [c.name, c.id] }
  .field
    = f.label :opponent
    = f.select :opponent_id, Character.all.collect { |c| [c.name, c.id] }
  .actions
    = f.submit 'Save'
